    "version": "0.2.0",
    "configurations": [
        {
            "name": "[debug] train",
            "type": "debugpy",
            "request": "launch",
            "module": "emergent_in_context_learning.experiment.experiment",
            "args": [
                // `:True` for debug arg, cf ml_collections
                "--config", "src/emergent_in_context_learning/experiment/configs/images_all_exemplars.py:True",
                "--logtostderr",
                "--jaxline_mode", 
                "train",
                // if restoring
                // "--config.restore_path",
                // "/tmp/tk/models/latest/step_2_2024-11-19T11:07:43",
            ],
            "env": {  // debug settings
                "JAX_DISABLE_JIT": "1",
                "JAX_PLATFORM_NAME": "cpu",
                // "XLA_PYTHON_CLIENT_MEM_FRACTION": 0.2,  // apparently also a thing
            }
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        },
    ]
}